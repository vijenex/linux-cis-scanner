{
  "milestone": "ssh-17",
  "version": "1.0.0",
  "description": "17 SSH Controls using SSHConfig type",
  "controls": [
    {
      "id": "5.1.7",
      "title": "Set SSH Client Alive Count Max",
      "type": "SSHConfig",
      "automated": true,
      "profile": "Level1",
      "section": "5.1",
      "parameter": "ClientAliveCountMax",
      "expected_value": "3",
      "cis_reference": "CIS RHEL 8 v4.0.0 - 5.1.7",
      "description": "Ensure sshd ClientAliveCountMax is configured"
    },
    {
      "id": "5.1.8",
      "title": "Set SSH Client Alive Interval", 
      "type": "SSHConfig",
      "automated": true,
      "profile": "Level1",
      "section": "5.1",
      "parameter": "ClientAliveInterval",
      "expected_value": "300",
      "cis_reference": "CIS RHEL 8 v4.0.0 - 5.1.8",
      "description": "Ensure sshd ClientAliveInterval is configured"
    },
    {
      "id": "5.1.12",
      "title": "Disable Host-Based Authentication",
      "type": "SSHConfig",
      "automated": true,
      "profile": "Level1",
      "section": "5.1",
      "parameter": "HostbasedAuthentication",
      "expected_value": "no",
      "cis_reference": "CIS RHEL 8 v4.0.0 - 5.1.12",
      "description": "Ensure sshd HostbasedAuthentication is disabled"
    },
    {
      "id": "5.1.21",
      "title": "Disable SSH Access via Empty Passwords",
      "type": "SSHConfig",
      "automated": true,
      "profile": "Level1",
      "section": "5.1",
      "parameter": "PermitEmptyPasswords",
      "expected_value": "no",
      "cis_reference": "CIS RHEL 8 v4.0.0 - 5.1.21",
      "description": "Ensure sshd PermitEmptyPasswords is disabled"
    },
    {
      "id": "5.1.13",
      "title": "Disable SSH Support for .rhosts Files",
      "type": "SSHConfig",
      "automated": true,
      "profile": "Level1",
      "section": "5.1",
      "parameter": "IgnoreRhosts",
      "expected_value": "yes",
      "cis_reference": "CIS RHEL 8 v4.0.0 - 5.1.13",
      "description": "Ensure sshd IgnoreRhosts is enabled"
    },
    {
      "id": "5.1.22",
      "title": "Disable SSH Root Login",
      "type": "SSHConfig",
      "automated": true,
      "profile": "Level1",
      "section": "5.1",
      "parameter": "PermitRootLogin",
      "expected_value": "no",
      "cis_reference": "CIS RHEL 8 v4.0.0 - 5.1.22",
      "description": "Ensure sshd PermitRootLogin is disabled"
    },
    {
      "id": "5.1.23",
      "title": "Do Not Allow SSH Environment Options",
      "type": "SSHConfig",
      "automated": true,
      "profile": "Level1",
      "section": "5.1",
      "parameter": "PermitUserEnvironment",
      "expected_value": "no",
      "cis_reference": "CIS RHEL 8 v4.0.0 - 5.1.23",
      "description": "Ensure sshd PermitUserEnvironment is disabled"
    },
    {
      "id": "5.1.5",
      "title": "Enable SSH Warning Banner",
      "type": "SSHConfig",
      "automated": true,
      "profile": "Level1",
      "section": "5.1",
      "parameter": "Banner",
      "expected_value": "/etc/issue.net",
      "cis_reference": "CIS RHEL 8 v4.0.0 - 5.1.5",
      "description": "Ensure sshd Banner is configured"
    },
    {
      "id": "5.1.4",
      "title": "Limit Users SSH Access",
      "type": "SSHConfig",
      "automated": true,
      "profile": "Level1",
      "section": "5.1",
      "parameter": "AllowUsers",
      "expected_value": "*",
      "cis_reference": "CIS RHEL 8 v4.0.0 - 5.1.4",
      "description": "Ensure sshd access is configured"
    },
    {
      "id": "5.1.15",
      "title": "Ensure SSH LoginGraceTime is configured",
      "type": "SSHConfig",
      "automated": true,
      "profile": "Level1",
      "section": "5.1",
      "parameter": "LoginGraceTime",
      "expected_value": "60",
      "cis_reference": "CIS RHEL 8 v4.0.0 - 5.1.15",
      "description": "Ensure sshd LoginGraceTime is configured"
    },
    {
      "id": "5.1.16",
      "title": "Set SSH Daemon LogLevel to VERBOSE",
      "type": "SSHConfig",
      "automated": true,
      "profile": "Level1",
      "section": "5.1",
      "parameter": "LogLevel",
      "expected_value": "VERBOSE",
      "cis_reference": "CIS RHEL 8 v4.0.0 - 5.1.16",
      "description": "Ensure sshd LogLevel is configured"
    },
    {
      "id": "5.1.18",
      "title": "Set SSH authentication attempt limit",
      "type": "SSHConfig",
      "automated": true,
      "profile": "Level1",
      "section": "5.1",
      "parameter": "MaxAuthTries",
      "expected_value": "4",
      "cis_reference": "CIS RHEL 8 v4.0.0 - 5.1.18",
      "description": "Ensure sshd MaxAuthTries is configured"
    },
    {
      "id": "5.1.19",
      "title": "Set SSH MaxSessions limit",
      "type": "SSHConfig",
      "automated": true,
      "profile": "Level1",
      "section": "5.1",
      "parameter": "MaxSessions",
      "expected_value": "10",
      "cis_reference": "CIS RHEL 8 v4.0.0 - 5.1.19",
      "description": "Ensure sshd MaxSessions is configured"
    },
    {
      "id": "5.1.20",
      "title": "Ensure SSH MaxStartups is configured",
      "type": "SSHConfig",
      "automated": true,
      "profile": "Level1",
      "section": "5.1",
      "parameter": "MaxStartups",
      "expected_value": "10:30:60",
      "cis_reference": "CIS RHEL 8 v4.0.0 - 5.1.20",
      "description": "Ensure sshd MaxStartups is configured"
    },
    {
      "id": "5.1.6",
      "title": "Use Only FIPS 140-2 Validated Ciphers",
      "type": "SSHConfig",
      "automated": true,
      "profile": "Level1",
      "section": "5.1",
      "parameter": "Ciphers",
      "expected_value": "chacha20-poly1305@openssh.com,aes256-gcm@openssh.com,aes128-gcm@openssh.com,aes256-ctr,aes192-ctr,aes128-ctr",
      "cis_reference": "CIS RHEL 8 v4.0.0 - 5.1.6",
      "description": "Ensure sshd Ciphers are configured"
    },
    {
      "id": "5.1.14",
      "title": "Use Only Strong Key Exchange algorithms",
      "type": "SSHConfig",
      "automated": true,
      "profile": "Level1",
      "section": "5.1",
      "parameter": "KexAlgorithms",
      "expected_value": "curve25519-sha256,curve25519-sha256@libssh.org,diffie-hellman-group14-sha256,diffie-hellman-group16-sha512,diffie-hellman-group18-sha512,ecdh-sha2-nistp521,ecdh-sha2-nistp384,ecdh-sha2-nistp256,diffie-hellman-group-exchange-sha256",
      "cis_reference": "CIS RHEL 8 v4.0.0 - 5.1.14",
      "description": "Ensure sshd KexAlgorithms is configured"
    },
    {
      "id": "5.1.17",
      "title": "Use Only Strong MACs",
      "type": "SSHConfig",
      "automated": true,
      "profile": "Level1",
      "section": "5.1",
      "parameter": "MACs",
      "expected_value": "hmac-sha2-256-etm@openssh.com,hmac-sha2-512-etm@openssh.com,hmac-sha2-256,hmac-sha2-512",
      "cis_reference": "CIS RHEL 8 v4.0.0 - 5.1.17",
      "description": "Ensure sshd MACs are configured"
    }
  ]
}