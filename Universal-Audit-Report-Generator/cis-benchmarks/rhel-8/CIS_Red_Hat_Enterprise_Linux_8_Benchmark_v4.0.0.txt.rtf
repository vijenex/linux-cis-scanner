\f4\fs20\fsmilli10080 #!/usr/bin/env bash\
\{\
l_valid_shells="^($(awk -F\\/ '$NF != "nologin" \{print\}' /etc/shells | sed -\
rn '/^\\//\{s,/,\\\\\\\\/,g;p\}' | paste -s -d '|' - ))$"\
